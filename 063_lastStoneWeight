class Solution:
    def lastStoneWeight(self, stones: List[int]) -> int:
        while len(stones)>1:
            stones.sort()
            m1=stones.pop()
            m2=stones.pop()
            if m1 != m2:
                stones.append(abs(m1-m2))      
        if stones:
            return stones[0]
        else:
            return 0
